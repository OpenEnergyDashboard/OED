{
    "compilerOptions": {
        "baseUrl": "./src/client/app/",
        "outDir": "./src/client/public/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
		"jsx": "react",
		"allowJs": true,
        "lib": ["es6", "dom", "es2015.promise"],
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true
    },
    "include": [
        "./src/client/app/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}