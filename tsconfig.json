{
	"compilerOptions": {
		"baseUrl": "./src/client/app/",
		"outDir": "./src/client/public/app/",
		"sourceMap": true,
		"module": "CommonJS",
		"target": "ES5",
		"jsx": "react",
		"allowJs": true,
		"lib": [
			"ES6",
			"DOM",
			"ES2021"
		],
		"moduleResolution": "node",
		"rootDir": "src",
		"allowSyntheticDefaultImports": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/client/app/types"
		],
	},
	"include": [
		"./src/client/app/**/*",
		"desc.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
