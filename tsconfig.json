{
	"compilerOptions": {
		"baseUrl": "./src/client/app/",
		"outDir": "./src/client/public/app/",
		"sourceMap": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"lib": [
			"es6",
			"dom",
			"es2021"
		],
		"moduleResolution": "node",
		"rootDir": "src",
		"allowSyntheticDefaultImports": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
	},
	"include": [
		"./src/client/app/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
