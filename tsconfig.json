{
    "compilerOptions": {
        "baseUrl": "./src/client/app/",
        "outDir": "./src/client/public/app/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
		"jsx": "react",
		"allowJs": true,
        "lib": ["es6", "dom", "es2015.promise"],
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/client/app/types"
        ]
    },
    "include": [
        "./src/client/app/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}
